; -*- mode: scheme; -*-

(define font '("font-adobe-source-han-sans"
               "gs-fonts"
               "fontconfig"
               "font-inconsolata"
               "font-dejavu"
               "font-gnu-freefont-ttf"
               "font-fira-mono"))

(define editor '("emacs"))

(define lang '("guile@2.2"
               "guile@2.2:debug"
               "icedtea@3.4.0"))

(define shell '("rxvt-unicode"))

(define system '("glibc-locales"
                 "strace"
                 "nss-certs"))

(define wm '("i3-wm"
             "i3status"
             "dmenu"))

(packages->manifest
 (map (compose list specification->package+output)
      (append font
              editor
              lang
              shell
              system
              wm)))
